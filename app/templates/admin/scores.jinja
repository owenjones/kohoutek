{% extends "admin/template.jinja" %}
{% block body %}
<div class="uk-section uk-section-default uk-section-xsmall">
  <div class="uk-container uk-container-xlarge">
    {% include "portal/components/alerts.jinja" %}

    <table class="uk-table uk-table-responsive uk-table-striped uk-table-middle">
      <thead>
        <tr>
          <th>ID</th>
          <th>Group/Unit (Troop)</th>
          <th class="uk-table-shrink">District/Division</th>
          <th class="uk-table-shrink">County</th>
          <th class="uk-table-shrink"># Members</th>
          <th class="uk-table-shrink">Raw Score</th>
          <th class="uk-table-shrink">Weighted Score</th>
          <th class="uk-table-shrink">Eligable</th>
        </tr>
      </thead>
      <tbody>
        {% for team in teams %}
        <tr>
          <td class="uk-text-small uk-table-link">
            <a href="{{ url_for('admin.entry', id=team.entry.id)}}">{{ team.entry.code }}</a>
          </td>
          <td>{{ team.entry.name }}</td>
          <td>{{ team.entry.district }}</td>
          <td>{{ team.entry.county_name }}</td>
          <td>{{ team.members }}</td>
          <td>{{ team.rawScore }}</td>
          <td>{{ team.weightedScore }}</td>
          <td>{% if team.entry.eligable %}<span class="uk-text-success" uk-icon="star"></span>{% endif %}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
