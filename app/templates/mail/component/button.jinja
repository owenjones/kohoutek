{% macro button(value, link) -%}
<tr>
  <td style="padding: 0 40px;">
    <table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: auto;">
      <tr>
        <td class="button-td button-td-primary" style="background: #1e87f0;">
          <a class="button-a button-a-primary" href="{{ link }}" style="background: #1e87f0; font-family: 'Rubik', sans-serif; font-size: 16px; line-height: 53px; text-decoration: none; padding: 0 40px; color: #ffffff; display: block; text-transform: uppercase;">{{ value }}</a>
        </td>
      </tr>
    </table>
  </td>
</tr>
{%- endmacro %}
