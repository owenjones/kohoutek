<div class="uk-margin">
  <label class="uk-form-label">Name</label>
  <div class="uk-form-controls"><input type="text" name="name" class="uk-input" placeholder="Name" value="{{ order.postage_name or "" }}" required></div>
</div>

<div class="uk-margin">
  <label class="uk-form-label">Address Line 1*</label>
  <div class="uk-form-controls"><input type="text" name="address_1" class="uk-input" placeholder="Address Line 1" value="{{ order.postage_address_1 or "" }}" required></div>
</div>

<div class="uk-margin">
  <label class="uk-form-label">Address Line 2</label>
  <div class="uk-form-controls"><input type="text" name="address_2" class="uk-input" placeholder="Address Line 2" value="{{ order.postage_address_2 or "" }}" /></div>
</div>

<div class="uk-margin">
  <label class="uk-form-label">City/Town*</label>
  <div class="uk-form-controls"><input type="text" name="city" class="uk-input" placeholder="City/Town" value="{{ order.postage_city or "" }}" required /></div>
</div>

<div class="uk-margin">
  <label class="uk-form-label">Postcode*</label>
  <div class="uk-form-controls"><input type="text" name="postcode" class="uk-input" value="{{ order.postage_postcode or "" }}" placeholder="Postcode" required /></div>
</div>

<div>
  <label class="uk-form-label">Country</label>
  <div class="uk-form-controls">
    <select id="country" name="country" class="uk-select">
    {% for country in countries %}
      <option value="{{ country.alpha_2 }}"{% if country.alpha_2 == selected_country %} selected{% endif %}>{{ country.name }}</option>
    {% endfor %}
    </select>
  </div>
</div>
