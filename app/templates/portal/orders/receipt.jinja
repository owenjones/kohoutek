{% extends "portal/orders/partials/paperwork_template.jinja" %}
{% block content %}
<div class="uk-width-1-1">
  <h4>Receipt for {{ order.entry.name }} ({{ order.entry.code }})</h4>
</div>

<div class="uk-width-2-3 uk-text-small">
  {% include "portal/orders/partials/paperwork_item_list.jinja" %}
</div>

<div class="uk-width-1-3 uk-text-small">
  <h5>Payment Details</h5>
  <table class="uk-table uk-table-small uk-table-justify uk-table-divider uk-table-middle">
    <tr>
      <th>Method</th>
      <td>{{ order.payment.type }}</td>
    </tr>

    <tr>
      <th>Amount</th>
      <td>{{ "Â£{:,.2f}".format(order.payment.amount) }}</td>
    </tr>

    <tr>
      <th>Received</th>
      <td>{{ order.payment.received_at.strftime('%d-%m-%Y') }}</td>
    </tr>
  </table>
</div>
{% endblock %}
