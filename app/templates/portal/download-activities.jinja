{% extends "portal/portal-frame.jinja" %}
{% block module %}
<div class="uk-section uk-section-default uk-section-small">
  <div class="uk-container uk-container-small">
    <div class="uk-flex uk-flex-stretch" uk-grid>
      <div class="uk-width-1-1 uk-text-center">
        <h1>Download Activities</h1>
      </div>
      {% include "portal/components/alerts.jinja" %}

      {% if matchPrompt %}
      <div class="uk-width-1-1">
        <div class="uk-card uk-card-default uk-card-body">
          <p>Why not <a href="{{ url_for("matchmake.details") }}" target="_blank">add yourself to the Kohoutek map</a>, so we can see where all of our entries are from!</p>
        </div>
      </div>
      {% endif %}

      <div class="uk-width-1-1">
        <div class="uk-card uk-card-default uk-card-body">
          <p><strong>19/02/2021 - activity pack and answers have been updated to correct a mistake with 'Search the Seven Seas'</strong></p>
          <hr />
          <h4>Activity Pack</h4>
          <div class="uk-flex uk-flex-middle" uk-grid>
            <div class="uk-width-2-3@m">
              <p>The activities for Kohoutek 2021, along with instructions for how to run the event with your group.</p>
            </div>
            <div class="uk-width-1-3@m uk-text-right@m">
              <a href="https://kohoutek.co.uk/static/activities/Kohoutek21Activities.pdf" target="_blank" class="uk-button uk-button-primary uk-button-large">Download</a>
            </div>
          </div>
          <hr />
          <h4>Activity Answers</h4>
          <div class="uk-flex uk-flex-middle" uk-grid>
            <div class="uk-width-2-3@m">
              <p>Answers for the activities, for leaders eyes only!</p>
            </div>
            <div class="uk-width-1-3@m uk-text-right@m">
              <a href="https://kohoutek.co.uk/static/activities/Xbubhgrx21Nafjref.pdf" target="_blank" class="uk-button uk-button-primary uk-button-large">Download</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
