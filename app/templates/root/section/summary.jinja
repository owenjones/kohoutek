<div id="under-the-sea">
  <div class="overlay">
    <div id="scores" class="uk-section uk-height-viewport avoid-sticky-nav">
      <div class="uk-container uk-flex uk-flex-center">
        <div class="uk-width-1-2 uk-width-1-3@m uk-margin-medium-bottom">
          <img src="{{ url_for('static', filename='img/badge.png')}}" alt="the kohoutek 2021 badge">
        </div>
      </div>
      <div class="uk-container">
        <div class="uk-width-1-1 uk-grid-collapse uk-child-width-expand@s uk-grid-match uk-text-center" uk-grid>
          <div>
            <div class="uk-background-primary uk-padding-small uk-light uk-flex uk-flex-column uk-flex-around">
              <h1 class="uk-margin-small-bottom uk-heading-medium">ðŸ¥‡</h1>
              <div>
                <h3 class="uk-margin-small-top uk-margin-small-bottom">{{ teams[0].entry.group_name }}</h3>
                <h4 class="uk-margin-remove">{{ teams[0].name }}</h4>
              </div>
            </div>
          </div>

          <div class="uk-margin-medium-top uk-flex-first@s">
            <div class="uk-background-secondary uk-padding-small uk-light uk-flex uk-flex-column uk-flex-around">
              <h1 class="uk-margin-small-bottom uk-heading-medium">ðŸ¥ˆ</h1>
              <div>
                <h3 class="uk-margin-small-top uk-margin-small-bottom">{{ teams[1].entry.group_name }}</h3>
                <h4 class="uk-margin-remove">{{ teams[1].name }}</h4>
              </div>
            </div>
          </div>

          <div class="uk-margin-large-top uk-flex-last">
            <div class="uk-background-secondary uk-padding-small uk-light mt-4 uk-flex uk-flex-column uk-flex-around">
              <h1 class="uk-margin-small-bottom uk-heading-medium">ðŸ¥‰</h1>
              <div>
                <h3 class="uk-margin-small-top uk-margin-small-bottom">{{ teams[2].entry.group_name }}</h3>
                <h4 class="uk-margin-remove">{{ teams[2].name }}</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="uk-container">
        <div class="uk-grid-collapse uk-background-default" uk-grid>
          <div class="uk-width-1-1 uk-width-1-2@l uk-padding">
            <h3>All Teams</h3>
            <p class="uk-text-meta">We had {{ teams|count }} teams from {{ total_entered }} different groups take part in Kohoutek 2021, with {{ total_participants }} total participants!</p>
            <table class="uk-table uk-table-small uk-table-middle uk-table-striped">
              {% for team in teams %}
              <tr>
                <td>{% if loop.previtem and loop.previtem.rawScore == team.rawScore %}-{% else %}{{ loop.index }}{% endif %}</td>
                <td>
                  {{ team.entry.group_name }}<br />
                  <span class="uk-text-small uk-text-bold">{{ team.name }}</span>
                </td>
                <td>{{ team.rawScore }}</td>
              </tr>
              {% endfor %}
            </table>
          </div>
          <div class="uk-width-1-1 uk-width-1-2@l uk-padding">
            <h3>Kohoutek Trophy</h3>
            <p class="uk-text-meta">The Kohoutek trophy is open to teams from Avon, Bristol and South Gloucestershire, and Somerset North counties ({{ trophy|count}} teams).</p>
            <table class="uk-table uk-table-small uk-table-middle uk-table-striped">
              {% for team in trophy %}
              <tr>
                <td>{% if loop.previtem and loop.previtem.rawScore == team.rawScore %}-{% else %}{{ loop.index }}{% endif %}</td>
                <td>
                  {{ team.group_name }}<br />
                  <span class="uk-text-small uk-text-bold">{{ team.name }}</span>
                </td>
                <td>{{ team.rawScore }}</td>
              </tr>
              {% endfor %}
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
